<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <filter>
        <filter-name>approveDocFilter</filter-name>
        <filter-class>th.co.wacoal.springtemplates.filter.approveDocFilter</filter-class>
    </filter>
    <filter>
        <filter-name>calibrateReportCreateFilter</filter-name>
        <filter-class>th.co.wacoal.springtemplates.filter.calibrateReportCreateFilter</filter-class>
    </filter>
    <filter>
        <filter-name>checkDocFilter</filter-name>
        <filter-class>th.co.wacoal.springtemplates.filter.checkDocFilter</filter-class>
    </filter>
    <filter>
        <filter-name>deviceReceiveFilter</filter-name>
        <filter-class>th.co.wacoal.springtemplates.filter.deviceReceiveFilter</filter-class>
    </filter>
    <filter>
        <filter-name>labApproveFilter</filter-name>
        <filter-class>th.co.wacoal.springtemplates.filter.labApproveFilter</filter-class>
    </filter>
    <filter>
        <filter-name>printStickerFilter</filter-name>
        <filter-class>th.co.wacoal.springtemplates.filter.printStickerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ThaiFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UTF8EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>checkDocFilter</filter-name>
        <url-pattern>/index/checkDoc.htm</url-pattern>
        <url-pattern>/checkDoc.htm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>approveDocFilter</filter-name>
        <url-pattern>/index/approveDoc.htm</url-pattern>
        <url-pattern>/approveDoc.htm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>labApproveFilter</filter-name>
        <url-pattern>/index/labApprove.htm</url-pattern>
        <url-pattern>/labApprove.htm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>printStickerFilter</filter-name>
        <url-pattern>/index/printSticker.htm</url-pattern>
        <url-pattern>/printSticker.htm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>calibrateReportCreateFilter</filter-name>
        <url-pattern>/index/createSearch.htm</url-pattern>
        <url-pattern>/createSearch.htm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>deviceReceiveFilter</filter-name>
        <url-pattern/>
        <url-pattern>/index/deviceReceivce.htm</url-pattern>
        <url-pattern>/deviceReceivce.htm</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <filter>
        <filter-name>ThaiFilter</filter-name>
        <filter-class>th.co.wacoal.sprintemplates.controller.ThaiFilter</filter-class>
    </filter>
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>th.co.wacoal.springtemplates.filter.loginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UTF8EncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
